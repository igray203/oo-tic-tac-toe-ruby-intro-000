#!/usr/bin/env ruby
require 'pry'
require_relative '../lib/tic_tac_toe.rb'

def play
  until over? == true
    turn
  end
  if won? == true
    if current_player =="X"
      puts "Congratulations O!"
    else
      puts "Congratulations X!"
    end
  elsif draw? == true
    puts "Cat's Game!"
  end
end
